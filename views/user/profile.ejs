<%- include('../partials/user_header.ejs') %>
<section style="background-color: #eee; padding-top: 15px">
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img
              src="https://media.istockphoto.com/id/1300845620/vector/user-icon-flat-isolated-on-white-background-user-symbol-vector-illustration.jpg?b=1&s=612x612&w=0&k=20&c=zdMrnElXIALTyT35otBWBGYH23t0zYiwwsg-6rjwnU4="
              alt="avatar"
              class="rounded-circle img-fluid"
              style="width: 150px"
            />

            <h5 class="my-3"><%=user.name %></h5>
            <a class="tp_btn1" href="">Log Out</a>
            <style>
              .tp_btn1 {
                border: 1px solid #eeeeee;
                display: inline-block;
                line-height: 38px;
                padding: 0px 40px;
                color: #000000;
                text-transform: capitalize;
                font-family: "Playfair Display", serif;
                font-weight: 500;
                border-radius: 50px;
              }

              .tp_btn1:hover {
                background: #d91009;
                color: #fff;
                border-color: #e91515;
              }
            </style>
            <div class="d-flex justify-content-center mb-2"></div>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div style="padding-left: 30px; padding-top: 10px" class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p style="padding-right: 20px" class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%=user.name %></p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p style="padding-right: 20px" class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%=user.email %></p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p style="padding-right: 20px" class="mb-0">Phone</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%=user.mobile%></p>
              </div>
            </div>
            <br />
            <div class="row col-lg-12">
              <!-- <div class="card mb-2"> -->
              <a class="tp_btn" href="/addAddress/">Add Address</a>
              <!-- </div> -->
              <!-- <div class="card mb-2"> -->
              <a class="tp_btn" data-toggle="modal" data-target="#exampleModal"
                >Change Password</a
              >
              <!-- </div> -->
              <a class="tp_btn" href="/orders">Your Orders</a>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-8">
        <div style="padding-left: 30px; padding-top: 10px" class="card mb-4">
          <div class="card-body">
            <h5>SHIPPING ADDRESSES</h5>
            <div class="row">
              <% if (add){ %> <% add.address.forEach(function(el) { %>

              <div class="card mb-4">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-9">
                      <p class="text-muted mb-0">
                        <%=el.fName%> <%=el.lName%>, <%=el.mob%>, <%=el.house%>,
                        <%=el.landmark%> ,<%=el.city%>, <%=el.state%>,
                        <%=el.district%>, <%=el.pincode%>
                      </p>

                      <a
                        onclick="return confirm('Are you sure?')"
                        style="
                          padding: 7px;
                          width: 20 px;
                          height: auto;
                          color: black;
                        "
                        href="/deleteAddress/<%=el._id %> "
                        ><i class="bi bi-trash"></i
                      ></a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% }) %> <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Change Passwod</h5>

        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <form action="/changePassword" method="post" class="">
        <div class="col-md-12 form-group p_star">
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            value=""
            placeholder="Old Password"
          />
        </div>

        <div class="col-md-12 form-group p_star">
          <input
            type="password"
            class="form-control"
            id="password"
            name="newPassword"
            value=""
            placeholder="New Password"
          />
        </div>
        <div class="col-md-12 form-group p_star">
          <input
            type="password"
            class="form-control"
            id="password"
            name="confirmPassword"
            value=""
            placeholder="Confirm Password"
          />
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </form>
    </div>
  </div>
</div>
