<%- include('../partials/admin_header.ejs') %>

<div class="container">
  <table  class="table table-striped">
    <thead style="color: greenyellow">
      <tr>
        <th class="p-4" scope="col"><h5>No</h5></th>
        <th class="p-4" scope="col"><h5>Image</h5></th>
        <th class="p-4" scope="col"><h5>Name</h5></th>
        <th class="p-4" scope="col"><h5>Price</h5></th>
        <th class="p-4" scope="col"><h5>Manufactur</h5></th>
        <th class="p-4" scope="col"><h5>Description</h5></th>
        <th class="p-4" scope="col"><h5>Category</h5></th>
        <th class="p-4" scope="col"><h5>Stock</h5></th>
        <th class="p-4" scope="col"><h5>Options</h5></th>
      </tr>
    </thead>
    <tbody>
      <a   style="
      height: 10px;
      background-color: rgb(18, 109, 165);
      color: rgb(255, 255, 255);
    " class="btn btn-primary btn-sm m-2" href="/admin/addProduct">Add Product</a> <br>
      <% product.forEach(function(product,index) { %>
      <tr>
        <th class="p-4" scope="row"><%=index+1 %></th>
        <td class="p-4" scope="row"><img src="<%=product.img %>" width="70px" height="auto" alt=""></td>
        <td class="p-4" scope="row"><b><%= product.name%></b></td>
        <td class="p-4" scope="row"><b><%= product.price %></b></td>
        <td class="p-4" scope="row"><b><%= product.mfg %></b></td>
        <td class="p-4" scope="row"><b><%= product.description %></b></td>
        <td class="p-4" scope="row"><b><%= product.category %></b></td>
        <td class="p-4" scope="row"><b><%= product.stock %></b></td>
        <td>
         
          <a style=" padding: 7px; width: 20px; height: auto; color: black;" href="/admin/editProduct/<%= product._id  %>"> <i class="bi bi-pen"></i></i></a> 
          <a onclick="return confirm('Are you sure?')" style= " padding: 7px; width: 20 px; height: auto; color: black;" href="/admin/deleteProduct/<%= product._id  %> "><i class="bi bi-trash"></i></a>
          
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>


