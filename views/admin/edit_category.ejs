<div class="logo">
  <a href="#"><img src="/assets/img/logo/logo.png" alt="" /></a>
</div>

<section style="padding-top: 30px">
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-6">
        <h2 class="text-center">Edit Category</h2>
        <% oneCategory  %> 
        <form
          action="/admin/editCategory/<%= oneCategory._id%> "
          method="post"
          enctype="multipart/form-data"
        >
          <% oneCategory  %> 

            <div class="form-outline mb-4">
            <label for="">Category Name</label>
            <input type="text" name="name"
            value="<%= oneCategory.name  %> "
            required class="form-control" />
          </div>

          <div class="form-outline mb-4">
            <label for="">Description</label>
            <input type="text" name="description"
            value="<%= oneCategory.description %> "
            required class="form-control" 
            rows="4"/>
            
          </div>


          <div class="form-outline mb-4">
            <input type="file" name="img" id="image" class="form-control" />
            <label value=" <%= oneCategory.img%> " class="form-label" for="form4Example1">Image</label>
          </div>

          <button
            style="
              height: 10px;
              background-color: rgb(18, 109, 165);
              color: rgb(255, 255, 255);
              padding: 15px ;
            "
            type="submit"
            class="btn btn-primary btn-block mb-4"
          >
            Edit Category
          </button>
        
        </form>
      </div>
    </div>
  </div>
</section> 

